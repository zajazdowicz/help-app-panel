{% extends 'base.html.twig' %}

{% block title %}Rejestracja - HelpDreams{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Rejestracja</h1>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.accountType, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <div class="alert alert-info mt-3">
                        <strong>Uwaga:</strong> Jeśli wybierzesz rolę "Dyrektor domu dziecka", po rejestracji będziesz musiał uzupełnić dane swojego domu dziecka i oczekiwać na weryfikację przez administratora.
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">Zarejestruj się</button>
                {{ form_end(registrationForm) }}

                <div class="mt-4 text-center">
                    <p>Masz już konto? <a href="{{ path('app_login') }}">Zaloguj się</a></p>
                    <p><a href="{{ path('app_home') }}">← Powrót do strony głównej</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
