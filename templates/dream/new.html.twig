{% extends 'base.html.twig' %}

{% block title %}Dodaj marzenie - Panel dyrektora{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Dodaj nowe marzenie</h1>
            <a href="{{ path('app_dream_index') }}" class="btn btn-secondary mb-3">Powrót do listy marzeń</a>
            
            {{ form_start(form) }}
                {{ form_row(form.productTitle) }}
                {{ form_row(form.productUrl) }}
                {{ form_row(form.productPrice) }}
                {{ form_row(form.productCategory) }}
                {{ form_row(form.description) }}
                {{ form_row(form.quantityNeeded) }}
                {{ form_row(form.isUrgent) }}
                {{ form_row(form.child) }}
                
                <button type="submit" class="btn btn-primary">Zapisz</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
