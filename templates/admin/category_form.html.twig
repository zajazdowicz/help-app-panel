{% extends 'admin/base.html.twig' %}

{% block title %}{% if category.id %}Edytuj kategorię{% else %}Nowa kategoria{% endif %} – Panel administracyjny{% endblock %}

{% block admin_body %}
<div class="container mt-4">
    <h1>{% if category.id %}Edytuj kategorię{% else %}Nowa kategoria{% endif %}</h1>
    <a href="{{ path('admin_categories') }}" class="btn btn-secondary mb-3">Powrót do listy</a>
    
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.isActive) }}
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary">
                        {% if category.id %}Zapisz zmiany{% else %}Utwórz kategorię{% endif %}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
