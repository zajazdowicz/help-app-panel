{% extends 'director/base.html.twig' %}

{% block title %}Edytuj dziecko - Panel dyrektora{% endblock %}

{% block director_body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Edytuj dziecko: {{ child.firstName }}</h1>
        <a href="{{ path('director_child_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Powr√≥t do listy
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.age) }}
                    </div>
                </div>
                {{ form_row(form.description) }}
                <div class="mb-3">
                    {{ form_row(form.isVerified) }}
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Zapisz zmiany
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
